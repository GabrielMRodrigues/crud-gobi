@model Gobi.Test.Jr.Domain.TodoItem
@{
    ViewData["Title"] = "Escreva aqui sua tarefa";
}

<div class=" justify-content-md-center">

    <h3 class="mt-5 mb-5 d-flex justify-content-between">
        @ViewData["Title"]
    
            <a asp-action="Index" class="btn btn-secondary">
                Voltar
            </a>
    
    </h3>

    <form asp-action="Add">

        <div class="row">

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descrição da tarefa:</label>
                <textarea asp-for="Description" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <label class="form-check-label" asp-for="Completed">
                        Finalizado?
                    </label>
                    <input class="form-check-input" type="checkbox" asp-for="Completed" id="flexSwitchCheckDefault">
                </div>
            </div>

            <div class="col-lg-12">
                <button class="btn btn-primary">
                    Salvar tarefa
                </button>
            </div>
        </div>


    </form>
</div>