@model Gobi.Test.Jr.Domain.TodoItem
 
@{
    ViewData["Title"] = "Editar tarefa";
}

<h3 class="mt-5 mb-5 d-flex justify-content-between">
    @ViewData["Title"]
    <a asp-action="Index" class="btn btn-secondary">
        Voltar
    </a>
</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group form-check form-switch">
                <label class="form-check-label">
                    Finalizado?
                    <input class="form-check-input" asp-for="Completed" id="flexSwitchCheckDefault" /> 
                </label>
            </div>
            <div class="form-group divCampoEditar">
                <label asp-for="Description" class="control-label">Descrição da tarefa: </label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

